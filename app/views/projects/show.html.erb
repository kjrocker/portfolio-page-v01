
<% if admin_signed_in? %>
  <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-primary' %>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Source link:</strong>
  <%= @project.source_link %>
</p>

<p>
  <strong>Complete link:</strong>
  <%= @project.complete_link %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @project.image, class: "img-thumbnail" %>
</p>

<p>
  <strong>Active:</strong>
  <%= @project.active %>
</p>

